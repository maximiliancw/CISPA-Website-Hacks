{
  "name": "CISPA Website Hacks",
  "description": "Switches on the light and adds the ticket age to the ticket system.",
  "version": "2.0",
  "manifest_version": 3,
  "author": "golla@cispa.de",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://cispa.de/*"],
      "js": ["injections/cispa.js"]
    },
    {
      "matches": ["https://tickets.cispa.de/*"],
      "js": ["injections/tickets.js"]
    },
    {
      "matches": ["https://voip.cispa.de/*"],
      "js": ["injections/voip.js"]
    }
  ],
  "host_permissions": ["https://*.cispa.de/*"]
}
